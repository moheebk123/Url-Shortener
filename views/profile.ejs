<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>URL Shortener</title>
  </head>
  <body>
    <%- include("layout/header.ejs") %> <% if (successes && successes.length >
    0) { %> <% successes.forEach((success) => { %>
    <p class="flash-success"><%= success %></p>
    <% }) %> <% } %> <% if (errors && errors.length > 0) { %> <%
    errors.forEach((error) => { %>
    <p class="flash-error"><%= error %></p>
    <% }) %> <% } %> <% if (user) { %>
    <div id="main">
      <div class="profile-box">
        <% if (avatar) { %>
          <img src="<%= avatar %>" alt="<%= user.name %>" class="avatar big">
          <% } else { %>
            <div class="avatar big">
            <%= user.name.slice(0, 1) %>
          </div>
          <% } %>
        <div class="profile-details">
          <h1><%= user.name %></h1>
          <h3><%= user.email %></h3>
          <h3><%= since %></h3>
        </div>
        <button class="logout">
          <a href="/logout">Logout</a>
        </button>
      </div>
      <div class="links-overview-box">
        <h2 class="heading">Shortened URLs</h2>
        <div class="links-overview">
          <%= links.length %>
          <div>Links Created</div>
        </div>
      </div>
      <% if (links && links.length > 0) { %>
      <div class="url-box">
        <%links.map(({_id, shortCode, url, createdBy}) => {%> <% const
        truncatedUrl = url.length >= 50 ? `${url.slice(0, 50)}...` : url; %>
        <div class="shorten-url">
          <div class="shorten-url-box">
            <a
              href="/shortUrl/<%= shortCode %>"
              target="_blank"
              rel="noopener noreferrer"
            >
              <%= host + "/shortUrl/" + shortCode %>
            </a>
            <br />
            <div><%= truncatedUrl %></div>
          </div>

          <div class="action-button">
            <button class="edit">
              <a href="/edit-shortened-url/<%= _id %>" type="button">Edit</a>
            </button>
            <form action="/delete/<%= _id %>" method="post">
              <button class="delete" type="submit">Delete</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <h3>No Shortened Url</h3>
      <% } %>
      <div class="verification-status">
        Email verification:
        <div class="verify-button-box">
          <div class="user-login-<%= isVerified ? 'success' : 'error'%>">
            <%= isVerified ? 'Verified' : 'Not Verified'%>
          </div>
          <% if (!isVerified) { %>
          <button class="verify"><a href="/verify-email">Verify Now</a></button>
          <% } %>
        </div>
      </div>
    </div>
    <div class="button-group">
      <button class="edit"><a href="/edit-profile">Edit Profile</a></button>
      <% if (isPasswordPresent) { %>
      <button class="edit">
        <a href="/change-password">Change Password</a>
      </button>
      <% } else { %>
      <button class="edit">
        <a href="/set-password">Set Password</a>
      </button>
      <% } %>
      <button class="delete" onclick="openConfirmationBox()">
        Delete Account
      </button>
    </div>
    <div class="confirmation-box">
      <div class="confirm-box">
        <h2>Are you sure you want to delete your account</h2>
        <div>
          <button class="edit" onclick="closeConfirmationBox()">Cancel</button>
          <form action="/delete-account" method="post">
            <button class="delete" onclick="closeConfirmationBox()">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    <% } else { %>
    <p class="flash-error">You are not authenticated to access profile page</p>
    <% } %>

    <script>
      const confirmation = document.querySelector(".confirmation-box");

      setTimeout(() => {
        const successes = document.querySelectorAll(".flash-success");
        if (successes.length > 0) {
          successes.forEach((success) => {
            success.style.display = "none";
          });
        }

        const errors = document.querySelectorAll(".flash-error");
        if (errors.length > 0) {
          errors.forEach((error) => {
            error.style.display = "none";
          });
        }
      }, 5000);

      function openConfirmationBox() {
        confirmation.style.display = "grid";
      }

      function closeConfirmationBox() {
        confirmation.style.display = "none";
      }
    </script>
  </body>
</html>
