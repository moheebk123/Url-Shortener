<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>URL Shortener</title>
  </head>
  <body>
    <%- include("layout/header.ejs") %>

    <% if (successes && successes.length > 0) { %>
      <% successes.forEach((success) => { %>
        <p class="flash-success"><%= success %></p>
      <% }) %>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <% errors.forEach((error) => { %>
        <p class="flash-error"><%= error %></p>
      <% }) %>
    <% } %>

    <% if (user) { %>
      <div id="main">
        <div class="profile-box">
          <div>
            <div class="profile-head">Name</div>
            <div class="profile-heading"><%= name %></div>
          </div>
          <div>
            <div class="profile-head">Email</div>
            <div class="profile-heading"><%= email %></div>
          </div>
        </div>
        <h2 class="heading">Shortened URLs</h2>
        <% if (links && links.length > 0) { %>
          <div class="url-box">
            <%links.map(({_id, shortCode, url, createdBy}) => {%>
              <% const truncatedUrl = url.length >= 50 ? `${url.slice(0, 50)}...` : url; %>
            <div class="shorten-url">
              <div class="shorten-url-box">
                <a href="/<%= shortCode %>" target="_blank" rel="noopener noreferrer">
                  <%= host + "/" + shortCode %>
                </a>
                <br />
                <div><%= truncatedUrl %></div>
              </div>
              <form action="/delete/<%= _id %>" method="post">
                <button class="edit">
                  <a href="/edit/<%= _id %>" type="button">Edit</a>
                </button>
                <button class="delete" type="submit">Delete</button>
              </form>
            </div>
            <% }) %>
          </div>
          <% } else { %>
            <h3>No Shortened Url</h3>
          <% } %>
      </div>
    <% } else { %>
      <p class="flash-error">You are not authenticated to access profile page</p>
    <% } %>

    <script>
      setTimeout(() => {
        const successes = document.querySelectorAll(".flash-success");
        if (successes.length > 0) {
          successes.forEach((success) => {
            success.style.display = "none";
          });
        }

        const errors = document.querySelectorAll(".flash-error");
        if (errors.length > 0) {
          errors.forEach((error) => {
            error.style.display = "none";
          });
        }
      }, 5000);
    </script>
  </body>
</html>
