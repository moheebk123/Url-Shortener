<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./style.css" />
    <title>URL Shortener</title>
  </head>
  <body>
    <%- include("layout/header.ejs") %>

    <% if (successes && successes.length > 0) { %>
      <% successes.forEach((success) => { %>
      <p class="flash-success"><%= success %></p>
      <% }) %>
    <% } %>


    <% if (errors && errors.length > 0) { %>
      <% errors.forEach((error) => { %>
      <p class="flash-error"><%= error %></p>
      <% }) %>
    <% } %>

    <div id="main">
      <% if (user) { %>
        <form class="input-box" action="/" method="post">
          <h1>URL Shortener</h1>
          <div class="box">
            <h2>Enter URL:</h2>
            <input type="url" name="url" class="url" required />
          </div>
          <div class="box">
            <h2>Short Code (Optional):</h2>
            <input type="text" name="shortCode" class="custom-url" />
          </div>
          <button type="submit">Short</button>
        </form>
      <% } %>
      <h1>Shortened URLs</h1>
      <div class="url-box">
        <%links.map(({shortCode, url}) => {%> <% const truncatedUrl = url.length
        >= 30 ? `${url.slice(0, 30)}...` : url; %>
        <div class="shorten-url">
          <a href="/<%= shortCode %>" target="_blank" rel="noopener noreferrer"
            ><%= host + "/" + shortCode %></a
          >
          <br />
          <div><%= truncatedUrl %></div>
        </div>
        <% }) %>
      </div>
    </div>

    <script>
      setTimeout(() => {
        const successes = document.querySelectorAll(".flash-success");
        if (successes.length > 0) {
          successes.forEach((success) => {
            success.style.display = "none";
          });
        }

        const errors = document.querySelectorAll(".flash-error");
        if (errors.length > 0) {
          errors.forEach((error) => {
            error.style.display = "none";
          });
        }
      }, 5000);
    </script>
  </body>
</html>
