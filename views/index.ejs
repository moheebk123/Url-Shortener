<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>URL Shortener</title>
  </head>
  <body>
    <%- include("layout/header.ejs") %>

    <% if (successes && successes.length >0) { %>
      <% successes.forEach((success) => { %>
      <p class="flash-success"><%= success %></p>
      <% }) %>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <% errors.forEach((error) => { %>
        <p class="flash-error"><%= error %></p>
      <% }) %>
    <% } %>

    <div id="main">
      <% if (user) { %>
        <div class="user-login-success">You are logged in</div>
      <form class="input-box" action="/" method="post">
        <h2 class="heading">URL Shortener</h2>
        <div class="box">
          <input type="url" name="url" class="url" placeholder="Enter URL" required />
        </div>
        <div class="box">
          <input type="text" name="shortCode" class="custom-url" placeholder="Enter custom short code (Optional)" />
        </div>
        <button type="submit">Short</button>
      </form>
      <% } else { %>
        <div class="user-login-warning">You are not-logged in</div>
      <% } %>

      <h2 class="heading">Shortened URLs</h2>
      <% if (links && links.length > 0) { %>
        <div class="url-box">
          <%links.map(({shortCode, url, createdBy}) => {%>
            <% const truncatedUrl = url.length >= 50 ? `${url.slice(0, 50)}...` : url; %>
          <div class="shorten-url">
            <div class="avatar"><%= createdBy?.name.slice(0, 1) %></div>
            <div class="shorten-url-box">
              <a href="/<%= shortCode %>" target="_blank" rel="noopener noreferrer">
                <%= host + "/" + shortCode %>
              </a>
              <br />
              <div><%= truncatedUrl %></div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
          <h3>No Shortened Url</h3>
        <% } %>
    </div>

    <script>
      setTimeout(() => {
        const successes = document.querySelectorAll(".flash-success");
        if (successes.length > 0) {
          successes.forEach((success) => {
            success.style.display = "none";
          });
        }

        const errors = document.querySelectorAll(".flash-error");
        if (errors.length > 0) {
          errors.forEach((error) => {
            error.style.display = "none";
          });
        }
      }, 5000);
    </script>
  </body>
</html>
