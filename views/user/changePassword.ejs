<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="shortcut icon" href="/assets/images/logo.png" type="image/x-icon">
    <title>Change Password</title>
  </head>
  <body>
    <%- include("../layout/header.ejs") %>
    <%- include("../partials/flashMessages.ejs") %>

    <div id="main">
      <%- include("../partials/userStatus.ejs") %>
      <% if (user) { %>
      <form class="input-box" action="/user/change-password" method="post">
        <h2 class="heading">Change Your Password</h2>
        <div class="box">
          <input
            type="password"
            name="oldPassword"
            class="old-password"
            placeholder="Enter your current password"
            required
          />
        </div>
        <div class="box">
          <input
            type="password"
            name="newPassword"
            class="new-password"
            placeholder="Enter your new password"
            required
          />
        </div>
        <div class="password-valid-box">
          <h4>Password must:</h4>
          <ul>
            <li>Be at least 8 characters long</li>
            <li>Contain a number</li>
            <li>Include uppercase and lowercase letters</li>
            <li>Include special character eg. +!&@#$/</li>
          </ul>
        </div>
        <button type="submit">Change Password</button>
        <h3><a href="/user/profile">Go to Profile</a></h3>
      </form>
      <% } %>
    </div>

    <script src="/scripts/flashMessages.js"></script>
  </body>
</html>
