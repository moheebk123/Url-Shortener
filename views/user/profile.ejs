<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="shortcut icon" href="/assets/images/logo.png" type="image/x-icon">
    <title>Profile</title>
  </head>
  <body>
    <%- include("../layout/header.ejs") %> <% if (successes && successes.length >
    0) { %> <% successes.forEach((success) => { %>
    <p class="flash-success"><%= success %></p>
    <% }) %> <% } %> <% if (errors && errors.length > 0) { %> <%
    errors.forEach((error) => { %>
    <p class="flash-error"><%= error %></p>
    <% }) %> <% } %> <% if (user) { %>
    <div id="main">
      <div class="profile-box">
        <% if (avatar) { %>
          <img src="<%= avatar %>" alt="<%= user.name.slice(0, 1) %>" class="avatar big">
          <% } else { %>
            <div class="avatar big">
            <%= user.name.slice(0, 1) %>
          </div>
          <% } %>
        <div class="profile-details">
          <h1><%= user.name %></h1>
          <h3><%= user.email %></h3>
          <h3><%= since %></h3>
        </div>
        <button class="logout">
          <a href="/auth/logout">Logout</a>
        </button>
      </div>
      <div class="links-overview-box">
        <h2 class="heading">Shortened URLs</h2>
        <div class="links-overview">
          <%= linksLength %>
          <div>Links Created</div>
        </div>
      </div>
      <button class="edit view"><a href="/user/<%= user.id %>/links?page=1">View Shortened URLs</a></button>
      <div class="verification-status">
        Email verification:
        <div class="verify-button-box">
          <div class="user-login-<%= isVerified ? 'success' : 'error'%>">
            <%= isVerified ? 'Verified' : 'Not Verified'%>
          </div>
          <% if (!isVerified) { %>
          <button class="verify"><a href="/auth/verify-email">Verify Now</a></button>
          <% } %>
        </div>
      </div>
    </div>
    <div class="button-group">
      <button class="edit"><a href="/user/edit-profile">Edit Profile</a></button>
      <% if (isPasswordPresent) { %>
      <button class="edit">
        <a href="/user/change-password">Change Password</a>
      </button>
      <% } else { %>
      <button class="edit">
        <a href="/user/set-password">Set Password</a>
      </button>
      <% } %>
      <button class="delete" onclick="openConfirmationBox()">
        Delete Account
      </button>
    </div>
    <div class="confirmation-box">
      <div class="confirm-box">
        <h2>Are you sure you want to delete your account</h2>
        <div>
          <button class="edit" onclick="closeConfirmationBox()">Cancel</button>
          <form action="/user/delete-account" method="post">
            <button class="delete" onclick="closeConfirmationBox()">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    <% } else { %>
    <p class="flash-error">You are not authenticated to access profile page</p>
    <% } %>

    <script src="/scripts/flashMessages.js"></script>
    <script>
      const confirmation = document.querySelector(".confirmation-box");

      function openConfirmationBox() {
        confirmation.style.display = "grid";
      }

      function closeConfirmationBox() {
        confirmation.style.display = "none";
      }
    </script>
  </body>
</html>
