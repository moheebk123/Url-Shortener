<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="shortcut icon" href="/assets/images/logo.png" type="image/x-icon">
    <title>URL Shortener</title>
  </head>
  <body>
    <%- include("../layout/header.ejs") %> <% if (successes && successes.length >0)
    { %> <% successes.forEach((success) => { %>
    <p class="flash-success"><%= success %></p>
    <% }) %> <% } %> <% if (errors && errors.length > 0) { %> <%
    errors.forEach((error) => { %>
    <p class="flash-error"><%= error %></p>
    <% }) %> <% } %>

    <div id="main">
      <%- include("../partials/userStatus.ejs") %>
      <% if (isVerified) { %>
      <form class="input-box" action="/add-url" method="post">
        <h2 class="heading">URL Shortener</h2>
        <div class="box">
          <input
            type="url"
            name="url"
            class="url"
            placeholder="Enter URL"
            required
          />
        </div>
        <div class="box">
          <input
            type="text"
            name="shortCode"
            class="custom-url"
            placeholder="Enter custom short code (Optional)"
          />
        </div>
        <button type="submit">Short</button>
      </form>
      <% } %>

      <h2 class="heading">Shortened URLs</h2>
      <% if (links && links.length > 0) { %>
      <div class="url-box">
        <%links.map(({shortCode, url, createdBy}) => {%> <% const truncatedUrl =
        url.length >= 50 ? `${url.slice(0, 50)}...` : url; %>
        <div class="shorten-url">
          <div class="avatar"><%= createdBy?.name.slice(0, 1) %></div>
          <div class="shorten-url-box">
            <a
              href="/shortUrl/<%= shortCode %>"
              target="_blank"
              rel="noopener noreferrer"
            >
              <%= host + "/shortUrl/" + shortCode %>
            </a>
            <br />
            <div title="<%= url %>"><%= truncatedUrl %></div>
          </div>
        </div>
        <% }) %>
        <div class="pagination">
          <a href="/links?page=1">See all shortened urls</a>
        </div>
      </div>
      <% } else { %>
      <h3>No Shortened Url</h3>
      <% } %>
    </div>

    <script src="/scripts/flashMessages.js"></script>
  </body>
</html>
