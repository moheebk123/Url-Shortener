<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="shortcut icon" href="/assets/images/logo.png" type="image/x-icon">
    <title>Reset Password</title>
  </head>
  <body>
    <%- include("../layout/header.ejs") %> <% if (successes && successes.length >
    0) { %> <% successes.forEach((success) => { %>
    <p class="flash-success"><%= success %></p>
    <% }) %> <% } %> <% if (errors && errors.length > 0) { %> <%
    errors.forEach((error) => { %>
    <p class="flash-error"><%= error %></p>
    <% }) %> <% } %>

    <div id="main">
      <% if (user) { %>
      <div class="user-login-success">You are logged in</div>
      <% } else { %>
      <div class="user-login-warning">You are not-logged in</div>
      <% } %>
      <form class="input-box" action="/auth/reset-password" method="post">
        <h2 class="heading">Enter Your Registered Email</h2>
        <div class="box">
          <input
            type="email"
            name="email"
            class="email"
            placeholder="Enter your registered email"
            required
          />
        </div>
        <button type="submit">Submit</button>
        <h3><a href="/auth/login">Go to Login</a></h3>
      </form>
    </div>

    <script>
      setTimeout(() => {
        const successes = document.querySelectorAll(".flash-success");
        if (successes.length > 0) {
          successes.forEach((success) => {
            success.style.display = "none";
          });
        }

        const errors = document.querySelectorAll(".flash-error");
        if (errors.length > 0) {
          errors.forEach((error) => {
            error.style.display = "none";
          });
        }
      }, 5000);
    </script>
  </body>
</html>
