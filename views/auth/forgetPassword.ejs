<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      rel="shortcut icon"
      href="/assets/images/logo.png"
      type="image/x-icon"
    />
    <title>Forget Password</title>
  </head>
  <body>
    <%- include("../layout/header.ejs") %> <% if (successes && successes.length
    > 0) { %> <% successes.forEach((success) => { %>
    <p class="flash-success"><%= success %></p>
    <% }) %> <% } %> <% if (errors && errors.length > 0) { %> <%
    errors.forEach((error) => { %>
    <p class="flash-error"><%= error %></p>
    <% }) %> <% } %>

    <div id="main">
      <%- include("../partials/userStatus.ejs") %>

      <form class="input-box" action="<%= resetPasswordUrl%>" method="post">
        <h2 class="heading">Reset Your Password</h2>
        <div class="box">
          <input
            type="password"
            name="newPassword"
            class="new-password"
            placeholder="Enter your new password"
            minlength="8"
            maxlength="100"
            required
          />
        </div>
        <div class="box">
          <input
            type="password"
            name="repeatPassword"
            class="repeat-password"
            placeholder="Repeat your new password"
            minlength="8"
            maxlength="100"
            required
          />
        </div>
        <div class="password-valid-box">
          <h4>Password must:</h4>
          <ul>
            <li>Be at least 8 characters long</li>
            <li>Contain a number</li>
            <li>Include uppercase and lowercase letters</li>
            <li>Include special character eg. +!&@#$/</li>
          </ul>
        </div>
        <button type="submit">Reset Password</button>
        <h3><a href="/login">Go to Login</a></h3>
      </form>
    </div>

    <script src="/scripts/flashMessages.js"></script>
  </body>
</html>
