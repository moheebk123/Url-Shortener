<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="shortcut icon" href="/assets/images/logo.png" type="image/x-icon">
    <title>Register</title>
  </head>
  <body>
    <%- include("../layout/header.ejs") %>
    <%- include("../partials/flashMessages.ejs") %>

    <div id="main">
      <form action="/auth/register" class="input-box" method="post">
        <h2>Register</h2>
        <div>
          <input
            type="text"
            name="name"
            placeholder="Enter your name"
            required
          />
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            required
          />
          <input
            type="password"
            name="password"
            placeholder="Enter your password"
            required
          />
          <%- include("../partials/testUser.ejs") %>
          <button>Register</button>
          <%- include("../partials/oauth.ejs") %>
          <h3>Already have an account <a href="/auth/login">Login</a></h3>
        </div>
      </form>
    </div>

    <script src="/scripts/flashMessages.js"></script>
  </body>
</html>
