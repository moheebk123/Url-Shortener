<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="shortcut icon" href="/assets/images/logo.png" type="image/x-icon">
    <title>Register</title>
  </head>
  <body>
    <%- include("../layout/header.ejs") %>
    <div id="main">
      <form action="/auth/register" class="input-box" method="post">
        <h2>Register</h2>
        <div>
          <input
            type="text"
            name="name"
            placeholder="Enter your name"
            required
          />
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            required
          />
          <input
            type="password"
            name="password"
            placeholder="Enter your password"
            required
          />
          <button>Register</button>
          <div class="oauth-box">
            <a href="/oauth/google">
              <img src="/assets/logos/google.png" alt="Google Icon" class="google">
            </a>
            <a href="/oauth/github">
              <img src="/assets/logos/github.png" alt="GitHub Icon" class="github">
            </a>
          </div>
          <h3>Already have an account <a href="/auth/login">Login</a></h3>
          <% if (errors && errors.length > 0) { %> <% errors.forEach((error) =>
          { %>
          <p class="flash-error"><%= error %></p>
          <% }) %> <% } %>
        </div>
      </form>
    </div>

    <script src="/scripts/flashMessages.js"></script>
  </body>
</html>
